<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.playground">

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PlayGroundApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Playground">

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data  android:name="com.playground.KoinInitializer"
                android:value="androidx.startup" />
        </provider>

        <activity
            android:name=".BiometricActivity"
            android:exported="true" />
        <activity
            android:name=".ComposeListActivity"
            android:exported="true"
            android:label="@string/title_activity_compose_list"
            android:theme="@style/Theme.Playground">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CameraActivity"
            android:exported="true" />
        <activity
            android:name=".DataStoreActivity"
            android:exported="true" />
        <activity
            android:name=".SecurityActivity"
            android:exported="true" />
        <activity
            android:name=".PagingActivity"
            android:exported="true" />
    </application>

</manifest>